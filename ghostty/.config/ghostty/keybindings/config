#
# Match the keybindings with tmux keybinding configuration,
# except instead of Tmux ctrl+a, use super+s with on Ghostty
# 'super' represents cmd key on macOS
#
# See `ghostty +list-keybinds`
# See `ghostty +list-actions`
#

# Toggle the Ghostty quick terminal
keybind = super+s>q=toggle_quick_terminal

# Configuration
keybind = super+s>r=reload_config

# window
keybind = super+s>n=new_window
keybind = super+s>x=close_surface

# tabs 
keybind = super+s>c=new_tab
keybind = super+s>shift+l=next_tab
keybind = super+s>shift+h=previous_tab
keybind = super+s>comma=move_tab:-1
keybind = super+s>period=move_tab:1

# quick tab switch
keybind = super+s>1=goto_tab:1
keybind = super+s>2=goto_tab:2
keybind = super+s>3=goto_tab:3
keybind = super+s>4=goto_tab:4
keybind = super+s>5=goto_tab:5
keybind = super+s>6=goto_tab:6
keybind = super+s>7=goto_tab:7
keybind = super+s>8=goto_tab:8
keybind = super+s>9=goto_tab:9

# split
keybind = super+s>\=new_split:right
keybind = super+s>-=new_split:down

keybind = super+s>j=goto_split:bottom
keybind = super+s>k=goto_split:top
keybind = super+s>h=goto_split:left
keybind = super+s>l=goto_split:right

keybind = super+s>m=toggle_split_zoom

keybind = super+s>e=equalize_splits

# other
copy-on-select = clipboard
